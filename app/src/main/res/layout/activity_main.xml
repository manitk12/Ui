<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.grademojo.ui.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="horizontal"
        android:weightSum="6"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="50dp"
            android:text="@string/number"
            android:textSize="27sp"
            android:textStyle="bold"
            android:textColor="#67bff1"
            android:layout_margin="20dp"
            android:gravity=""
             />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="50dp"
            android:text="@string/arpit"
            android:textSize="27sp"
            android:textStyle="bold"
            android:textColor="#67bff1"
            android:layout_margin="20dp"
            android:gravity=""
             />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:weightSum="3"
        android:layout_margin="20dp"
        android:orientation="horizontal"

        >

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:id="@+id/tookexam1"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:text="@string/took_exam"
            android:textStyle="normal"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:background="@drawable/xml_bg_grey_r15"
             />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:id="@+id/notapp1"
            android:gravity="center"
            android:text="@string/not_applicable"
            android:textStyle="normal"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:background="@drawable/xml_bg_blue_r15"
             />



        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:id="@+id/didnottake1"
            android:text="@string/did_not_take_exam"
            android:layout_marginStart="10dp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:textSize="14sp"
            android:layout_gravity="end"
            android:background="@drawable/xml_bg_blue_r15"
             />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center_horizontal"
        android:weightSum="5"
        android:layout_margin="100dp"
        android:orientation="horizontal"
         >

        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="40dp">

            <EditText
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_marginStart="10dp"
                android:background="#00000000"
                android:hint="@string/marks"
                android:textColorHint="#b3e4ff"
                 />

            <View
                android:layout_width="200dp"
                android:layout_height="1dp"
                android:background="@color/blue"
                android:layout_gravity="top"
                />

            <View
                android:layout_width="200dp"
                android:layout_height="1dp"
                android:background="@color/blue"
                android:layout_gravity="bottom"
                />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/blue"
                android:layout_gravity="start"
                />

        </FrameLayout>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="left"
            android:background="@drawable/ic_proged_pencil_filled"
            android:layout_weight="1"/>

    </LinearLayout>

</LinearLayout>
